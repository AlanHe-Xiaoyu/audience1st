%h1= "Details for #{@show.name}"

- form_tag :action => 'update', :id => @show  do
  = render :partial => 'form'
  = submit_tag 'Save Changes'

%h2
  Performances:
  - if @is_boxoffice_manager
    = gen_button  'Add a Performance', {:controller => 'showdates', :action => 'new', :show_id => @show }

%p
  = link_to 'Show all details', :action => 'edit', :id => @show, :display => 1
  = " | "
  = link_to 'Hide all details', :action => 'edit', :id => @show

%table
  %thead
    %tr
      %th Date/time
      %th Adv sales stop
      %th Max Cap
      %th Redeemable Ticket Types (click name to edit)
  %tbody
    = render :partial => 'showdate', :collection => @showdates, :locals => {:is_boxoffice_manager => @is_boxoffice_manager}

= link_to 'Back to List of Shows', :action => 'list'
