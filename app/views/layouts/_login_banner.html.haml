.row
  .col.pull-left
    - if !current_user.has_ever_logged_in?
      = link_to 'Cancel/Start Over', logout_path, :class =>  'btn btn-secondary float-right'
    - else
      = link_to 'Log Out', logout_path, :class => 'btn btn-secondary'
      = current_user.full_name
  .col.pull-right
    - if @gAdminDisplay
      = link_to 'View as Patron', temporarily_disable_admin_session_path, :class => 'btn btn-outline-danger float-right'
    - elsif current_user().is_staff
      = link_to 'View as Admin', reenable_admin_session_path, :class => 'btn btn-outline-danger float-right'
