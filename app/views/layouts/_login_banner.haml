%table{:width=>'100%'}
  %tr
    %td.l#welcome
      Welcome,
      - if @gAdmin.is_staff
        %span.adminField= h("#{@gLoggedIn.full_name} <#{@gLoggedIn.login}>")
        = button_to('Disable Admin', :controller => 'customers', :action => 'disable_admin') if controller.controller_name =~ /customer|store/
      - else
        = h @gLoggedIn.full_name
        = h("<#{@gLoggedIn.login}>") unless @gLoggedIn.login.blank?
      = button_to 'Log Out', {:controller=>'customers', :action=>'logout'}
    %td.r
      = Time.now.to_formatted_s(:short)
      - if @gAdmin.is_admin 
        %br
        = "#{h Session.num_active} users logged in"
