!!! Strict
%html
  %head
    = stylesheet_link_tag 'vbo'
    = javascript_include_tag :defaults 

    %title= @page_title || sprintf("%s: %s", controller.controller_name.capitalize,controller.action_name.capitalize) 
    %meta{'http-equiv'=>'content-type', :content=>'text/html; charset=utf-8'}/
    %meta{'http-equiv'=>:imagetoolbar, :content=>:no}/
    %meta{:name=>:description, :content=>''}/

  %body{:id=>"#{h(controller.controller_name)}_#{h(controller.action_name)}", :class=>(RAILS_ENV != 'production' ? :testing : nil)}

    - c = Customer.find_by_id(session[:cid] || Customer.nobody_id)
    - if (admin=Customer.find_by_id(session[:admin_id]))
      - logged_in = admin
    - else
      - logged_in = c

    - if c && (session[:cid] != 0)
      = render :partial => 'layouts/login_banner', :locals => {:c => c,:logged_in=>logged_in}
      = render :partial => 'layouts/storenav', :locals => {:admin=>admin,:c=>c,:logged_in=>logged_in}
    - unless flash[:notice].blank?
      %p.infoMsg{:clear=>:both}= flash[:notice]

    = yield 

    #footer
      %p
        \&copy; 2007
        = link_to 'AudienceFirst', 'http://www.audience1st.com'
        = " - Build #{APP_CONFIG[:version]} - "
        = link_to "Terms of Use & Privacy Policy", APP_CONFIG[:privacy_policy_url], :target=>:_blank
