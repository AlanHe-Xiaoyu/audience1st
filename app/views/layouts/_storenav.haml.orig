%ul#storeNav
  %li#t_store_index
    = link_to 'Buy Tickets', {:controller => 'store', :action => 'index', :id => customer} 
  %li#t_customers_welcome
    = link_to 'My Tickets', {:controller => 'customers', :action => 'welcome', :id => customer}
  %li#t_customers_edit
    = link_to 'Contact Info', {:controller => 'customers', :action => 'edit', :id => customer} 

- if is_admin && customer

%p.adminField
  = h("#{customer.full_name}'s Account:")
  = admin_button  'Add Vouchers', {:controller => 'vouchers', :action => 'addvoucher', :customer => @customer} 
  = admin_button  'Record donation', {:controller => 'donation', :action => 'new', :customer => @customer}
  = admin_button 'Donation & Purchase History', {:controller => 'donation', :action => 'list', :use_cid => 1, :commit => 'Go', :cid => @customer, :show_vouchers => true}
  = admin_button 'Database Transactions', {:controller => 'txn', :action => 'list', :params => {:txns_filter => @customer.id}} 
  %br

- else

%p.clearboth

- end
