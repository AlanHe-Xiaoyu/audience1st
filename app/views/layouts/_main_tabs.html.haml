- tabs = [['Buy Tickets', :store, :index], |
  ['Subscribe', :store, :subscribe],       |
  ['My Tickets', :customers, :welcome],    |
  ['Billing/Contact', :customers, :edit],  |
  ['Change Password', :customers, :change_password]] |
%ul.nav= nav_tabs 'store_nav', tabs
- if @gAdmin.is_staff
  - tabs =    |
    [['Season', :shows, :index], |
    ['Vouchers', :vouchertypes, :index], |
    ['Reports', :reports, :index], |
    ['Box Office', :box_office, :walkup], |
    ['Donations', :donations, :index]] |
  - if @gAdmin.is_boxoffice_manager
    - tabs << ['Admin', :options, :edit]
  %ul.nav= nav_tabs 'admin_nav', tabs
