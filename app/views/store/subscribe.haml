/ = error_messages_for 'store'

#store
  #subscriptionsMenus
    %h1.page_heading.center Subscriber Benefits
    %p.storeText= sanitize_option_text :subscription_benefits_short_description
    - unless @subscriber
      %p.storeText= sanitize_option_text :nonsubscriber_subscription_teaser
      
    - form_tag :action => 'shipping_address' do
      = javascript_recalc_function :total, @subs_to_offer.map {|s| s.id}, :price, :vouchertype, :donation, :submit
      - @subs_to_offer.each do |s|
        %label.wide_label{:for => "vouchertype[#{s.id}]"}= s.name_with_price
        = select_tag("vouchertype[#{s.id}]", options_for_select((0..8).to_a), :onChange => 'recalc_total()')
        %br/
        = hidden_field_tag "price[#{s.id}]", s.price
      %label.wide_label{:for => :donation} Additional tax-deductible donation
      = text_field_tag 'donation', '', :size => 5, :onBlur => 'recalc_total()'
      \.00
      %br
      #orderTotal
        %label.strong.wide_label{:for=>:total} Order Total:
        = text_field_tag 'total', '0.00', :size => 6, :disabled => true
      - unless Option.value(:allow_gift_subscriptions).blank?
        %label.emphasis.wide_label{:for=>:gift} Is this order a <strong>gift?</strong>
        = check_box_toggle 'gift', false, :nextstep, 'to enter Recipient information', 'to Billing information'
      %br
      %label.wide_label &nbsp;
      = hidden_field_tag 'redirect_to', 'subscribe'
      = submit_tag 'CONTINUE >>', {:disabled => true, :id => 'submit'}
      %span#nextstep to Billing Information

