- if @order.includes_vouchers? &&  !@order.gift?
  .container#someone_else
    .form-row
      - if @order_contains_class_order
        .col-md-8 Who is attending the class?
        .col-md-4= text_field_tag 'pickup', '', :class => 'form-control', :placeholder => "Enrollee's name"
      - else
        .col-md-8 Is someone <strong>other than the purchaser</strong> picking up the tickets?
        .col-md-4= text_field_tag 'pickup', '', :class => 'form-control', :placeholder => "If yes, attendee's name"
