= render :partial => 'store_banner', :locals => {:subscriber => @subscriber}

#store

  - unless @cart.is_empty?
    #shoppingCart.pageDiv

      %h2.center Your Order So Far
      - form_tag :action => 'checkout' do
        = render :partial => 'cart', :locals => {:editable => true}
        = submit_tag 'Checkout'
        = gen_button  'Empty Cart', {:action => 'empty_cart'}
  
  / #promo_entry.pageDiv
  /  = render :partial =>'promo_entry',:locals=>{:promo_code=>@promo_code.to_s}

  %h1.page_heading.center
    Buy Tickets
    %span.small= "(Using Promo Code: #{h(@promo_code)}" if @promo_code

  %p.storeText= sanitize_option_text(@subscriber ? :subscriber_store_message : :nonsubscriber_store_message)
  
  = render :partial => 'ticket_menus'
  %br/
  = render :partial => 'donate'
