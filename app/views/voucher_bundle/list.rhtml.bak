<h1>Currently Defined Packages</h1>

<% cols = Purchasemethod.content_columns.reject { |r| r.name == 'included_vouchers' } %>
<table>
  <tr>
  <% for column in cols %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for purchasemethod in @purchasemethods %>
  <tr <%= stripe %>>
  <% for column in cols %>
    <% next if column.name == 'included_vouchers' %>
    <td><%=h purchasemethod.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => purchasemethod %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => purchasemethod %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => purchasemethod }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @purchasemethod_pages.current.previous } if @purchasemethod_pages.current.previous %>
<%= link_to 'Next page', { :page => @purchasemethod_pages.current.next } if @purchasemethod_pages.current.next %> 

<br />

  <%= link_to 'Define New Package', {:action => 'new'}, {:class => 'genButton'} %>
