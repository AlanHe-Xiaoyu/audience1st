= error_messages_for 'showdate'

%table
  %tr
    %td Date and time
    %td= parent_datetime_select 'showdate', 'thedate', 'end_advance_sales', {:start_year => Time.now.year, :end_year => Time.now.year + 3, :minute_step => 15, :date => @showdate.thedate}
  %tr
    %td Advance sales stop
    %td= child_datetime_select 'showdate', 'end_advance_sales',  {:start_year => Time.now.year, :end_year => Time.now.year + 3,  :minute_step => 15 }
  %tr
    %td Max advance sales
    %td= text_field 'showdate', 'max_sales', 'size' => 5
    = hidden_field_tag "showdate[show_id]", @showdate.show.id

= gen_button  "Don't Save Changes", {:controller => 'shows', :action => 'edit', :id => @showdate.show.id }

