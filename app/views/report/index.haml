.pageDiv
  %h1 
    Quick Subscriber Stats for
    - y = Time.now.year
    = select_tag('year', options_for_select((y-2..y+1).to_a, y))
    %span#wait{:style=>'display: none'} Refreshing...
  = observe_field('year', :with=>'year', :update=>'subscriber_stats', :url => {:action => 'subscriber_details'}, :before => "Element.show('wait')", :complete => "Element.hide('wait')")
    
  #subscriber_stats= render :partial => 'subscriptions', :object => @subscriptions, :locals => {:year => y}

