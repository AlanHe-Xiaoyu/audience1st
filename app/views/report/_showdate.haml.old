%table{:width=>'100%'}
  %tr
    %td{:width => '70%'}
      = link_to_remote(header ||= showdate.thedate.to_formatted_s(:long),:update=>"showdate_#{showdate.id}",:url=>{:action=>"showdate_sales",:id=>showdate,:klass=>showdate.class}, :complete=>visual_effect(:toggle_slide,"showdate_#{showdate.id}",:duration=>0.5))
    %td{:width=>'10%',:align=>:right}
      %strong= showdate.vouchers.size
    %td{:width=>'10%',:align=>:center}= number_to_percentage(showdate.percent_sold,:precision=>0)
    %td{:width=>'10%',:align=>:right}
      %strong= number_to_currency(showdate.revenue)
%div{:style=>"display: none;", :id=>"showdate_#{showdate.id}"}
