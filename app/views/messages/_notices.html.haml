- unless flash[:notice].blank?
  .alert.alert-secondary.text-center{'data-hilite' => '#00dd00'}
    %p= render_multiline_message(flash[:notice])

- unless flash[:alert].blank?
  .alert.alert-danger.text-center{'data-hilite' => '#ffff00'}
    %p= render_multiline_message(flash[:alert])

= javascript_tag %q{$('.message').animate({backgroundColor: $('.message').data('hilite')}, 3000);}
