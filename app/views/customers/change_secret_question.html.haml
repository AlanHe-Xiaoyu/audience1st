%h1.page_heading.center Setup Secret Question for #{@customer.full_name}

- form_tag change_secret_question_customer_path(@customer) do
  %fieldset#secret_question
    %legend Secret Question
    %p 
      Please choose a question to answer in case you forget your password:
      = popup_help_for :secret_question
    %label{:for => :customer_secret_question} Question:
    = select 'customer', 'secret_question', secret_question_select(@customer)
    %br
    %label{:for => :customer_secret_answer} Answer:
    = text_field 'customer', 'secret_answer', :size => 40, :max => 40

    = submit_tag 'Save Changes'
    = link_to "Don't Save Changes", customer_path(@customer)
