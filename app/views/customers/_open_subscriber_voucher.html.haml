= form_tag confirm_multiple_customer_vouchers_path(@customer) do
  - gid = group.group_id
  = hidden_field_tag 'voucher_ids', group.voucherlist
  %td.text-center= menu_or_static_text('number', group.size)
  %td{:title => (group.voucherlist if @gAdminDisplay)}= group.name
  %td.selectShowdate
    - label_function = @gAdminDisplay ? :date_with_explanation_for_admin : :date_with_explanation
    = select_tag 'showdate_id', content_tag(:option, "Select date to reserve...", :value => 0) + options_from_collection_for_select(group.redeemable_showdates.sort, :showdate_id, label_function), :class => 'showdate form-control', :onchange => %Q{$('#special_seating_#{gid}').slideToggle(); $('#confirm_#{gid}').prop('disabled',false)}
    = render :partial => 'special_seating', :locals => {:gid => gid}
  %td.action= submit_tag 'Confirm', :disabled => 'disabled', :disable_with => 'Confirming...', :id => "confirm_#{gid}", :class => 'btn btn-success'
  %td.admin
