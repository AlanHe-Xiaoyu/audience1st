%fieldset#login_info
  %legend Password
  %p Please choose a password so you can track your ticket purchases online.
  %label{:for=>:customer_password}= defined?(newpassword) ? 'New Password' : 'Password'
  = password_field 'customer', 'password', :size => 20, :value => ''
  %br
  %label{:for=>:customer_password_confirmation}= defined?(newpassword) ? 'Confirm New Password' : 'Confirm Password'
  = password_field 'customer', 'password_confirmation', :size => 20, :value => ''
