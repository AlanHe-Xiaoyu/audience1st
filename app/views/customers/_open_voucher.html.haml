- if group.redeemable_showdates.empty?
  .row.border-top.border-secondary[group.vouchers.first]
    .col-1.text-center= group.size
    .col-3.text-center= group.name
    .col-4.text-center= "Reservations unavailable for this show" if group.vouchertype.reservable?

- else
  .row.border-top.border-secondary[group.vouchers.first]
    = form_tag confirm_multiple_customer_vouchers_path(@customer), :method => :post, :class => 'form-inline a1-force-fullwidth' do
      = hidden_field_tag 'voucher_ids', group.voucherlist, :class => 'voucherlist'
      = hidden_field_tag 'num_tickets', group.size, :class => 'num_tickets'
      .col-1.text-center= menu_or_static_text('number', group.size)
      .col-3.text-center= group.name
      .col-4.text-center
        = select_tag 'showdate_id',              |
          content_tag(:option, "Select...", :value => 0) + options_from_collection_for_select(group.redeemable_showdates.sort, :showdate_id, label_function),          |
          :id => nil,                            |
          :class => 'showdate form-control overflow-auto a1-force-fullwidth'     |
        = text_field_tag 'comments', '', :class => 'invisible form-control form-control-sm special-seating a1-force-fullwidth', :placeholder => t('reservations.special_seating_requests')
      .col-2.text-center= text_field_tag 'seats', '', :disabled => 'disabled', :class => 'seat-display shadow-none a1-passive-text-input'
      .col-2.text-center
        .seating-options
