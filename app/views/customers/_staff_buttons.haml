#staffButtons.adminField
  %p
    %span.strong Customer: 
    %span#onBehalfOfName= h @gCustomer.full_name
    (last login:
    = h @gCustomer.last_login.to_formatted_s(:month_day_year)
    )
  %p
    %span.strong Report:
    = button_bar( |
       ['Contact History', :visits, :list, {}], |
       ['Prospecting Activities', :visits, :list_by_prospector, {}], |
       ['Database Transactions',:txn, :list, |
          {:params => {:txns_filter => @gCustomer.id}}], |
       ['Donation & Purchase History', :donation, :list, |
          {:use_cid => 1, :commit => 'Go', :cid => @gCustomer, |
          :show_vouchers => true}]) |
  %p
    %span.strong Actions:
    = button_bar( |
       ['Record Donation',:donation,:new, {}],  |
       ['Add Comps',:vouchers, :addvoucher, {}], |
       ['Manage Vouchers', :vouchers, :manage, {:customer => @gCustomer}], |
       ['Classic View', :customers,:welcome, {:force_classic => 1}] ) |
.clear
