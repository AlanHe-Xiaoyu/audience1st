= themed

.container
  %h1 Checkout As Guest

  = form_tag guest_checkout_create_customers_path do
    = render :partial => 'billing_address', :locals => {:customer => @customer}
    .form-row.py-2
      .col-md-2= link_to 'Cancel', store_path, :class => 'btn btn-secondary btn-block'
      .col-md-8
      .col-md-2= submit_tag 'CONTINUE >>', :class => 'btn btn-primary btn-block'
