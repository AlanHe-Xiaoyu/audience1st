%h1.page_heading.center Contact Info for #{h @customer.full_name}

= error_messages_for :customer

%br/
- form_tag customer_path(@customer), :method => :put do
  = render :partial => 'form' 
  - if @is_admin
    = render :partial => 'form_admin'
  %br/
  %br/
  = submit_tag 'Save Changes' 
  = gen_button 'Cancel', customer_path(@customer)
