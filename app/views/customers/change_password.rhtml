<div class="pageDiv">
<h1>Changing Password for <%= "#{@customer.full_name}" %> </h1>

<%= error_messages_for :customer %>

<%= start_form_tag :action => 'change_password', :customer => @id %>

<%= render :partial => 'password', :locals => {:newpassword => 'new'} %>

<%= submit_tag 'Change Password' %> 
<%= link_to "Don't Change Password", {:action => 'welcome', :id => @customer}, :class => 'genButton' %>

<%= end_form_tag %>
</div>
