- gid = group.group_id
%tr[gid]

  - if group.vouchers[0].reservable?

    - dates = group.vouchers[0].redeemable_showdates(current_user.is_boxoffice)
    - form_tag confirm_multiple_customer_vouchers_path(@customer) do
      %td.c= menu_or_static_text('number', group.size)
      %td= group.name
      %td.selectShowdate
        = select_tag 'showdate_id', |
          content_tag(:option, "Select show and date...", :value => 0) + |
          options_from_collection_for_select(dates.sort, :showdate_id, :date_with_explanation), |
          :class => 'showdate', |
          :onchange => visual_effect(:toggle_appear, "special_seating_#{gid}") |
        = render :partial => 'special_seating', :locals => {:gid => gid}
      %td.action= submit_tag 'Click to Confirm', :disable_with => 'Confirming...', :style => "width: 17ex"
      %td

  - else

    %td.c= group.size
    %td= group.name
    %td
    %td
    = render :partial => 'update_voucher_comments', :locals => {:group => group}
