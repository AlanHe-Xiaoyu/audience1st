= error_messages_for 'donation', :header_message => default_validation_error_message
/[form:donation]

%p
  %label{:for=>:donation_sold_on} Date
  = date_select 'donation', 'sold_on'
  
%p
  %label{:for=>:donation_amount} Amount or approx. dollar value
  $ 
  = text_field 'donation', 'amount', 'size' => 8

%p
  %label{:for=>:donation_account_code} Account code
  = collection_select 'donation', 'account_code_id', AccountCode.find(:all), 'id', 'name'
  = gen_button 'Add new...', {:controller => 'account_code', :action => 'new'}

%p
  %label{:for=>:donation_purchasemethod} How effected
  = collection_select 'donation', 'purchasemethod_id', Purchasemethod.find(:all), 'id', 'description'

%p
  %label{:for=>:donation_comment} Comment
  = text_area 'donation', 'comments', 'cols' => 80, 'rows' => 2
      
= hidden_field 'donation', 'customer_id'

/[eoform:donation]

