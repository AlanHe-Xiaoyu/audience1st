%h1 Listing account codes (click name to edit)

%table.hilite
  %tr
    %th Name
    %th Description
    %th Acc Code
    %th
  - @account_codes.each do |account_code|
    %tr
      %td= link_to account_code.name, edit_account_code_path(account_code)
      %td= h(account_code.description)
      %td= h(account_code.code)
      %td= purchase_link_popup '[Link]', donate_to_fund_path(account_code.id), "donations to #{account_code.name_with_code}"
%br

= link_to 'Add New Account Code', new_account_code_path , :class => 'genButton'
